<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Journal Entry</title>
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/css/journal.css" />
</head>
<body>
  <div class="sidebar">
    <ul>
      <li><a href="home">Home</a></li>
      <li><a href="home">Dashboard</a></li>
      <li><a href="journal">Journal</a></li>
      <li><a href="goals">Goals</a></li>
      <li><a href="challenges">Challenges</a></li>
      <li><a href="">Reminders</a></li>
      <li><a href="profile">Profile</a></li>
  </ul>
  </div>
  <div class="main-content">
  <h1>Journal Entry</h1>
  <form id="journalForm" action="/journal" method="post">
    <div>
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required>
    </div>
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
    </div>
    <div>
      <label for="content">Content:</label>
      <textarea id="content" name="content" rows="5" required></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>
  <h1>Previous Entries</h1>
  <ul class="journal-entries">
    <% entries.forEach(entry => { %>
        <li class="journal-entry">
            <h3 class="entry-title"><%= entry.title %></h3>
            <p class="entry-date">
                <% if (entry.date && entry.date instanceof Date) { %>
                    <%= entry.date.toDateString() %>
                <% } else { %>
                    Date Not Available
                <% } %>
            </p>
            <p class="entry-content"><%= entry.content %></p>
        </li>
    <% }) %>
</ul>
  </div>
  <script>
    document.getElementById('home').addEventListener("click", function(event) {
      window.location.href = '/home';
  console.log("clicked");
});
    document.getElementById('journal').addEventListener("click", function(event) {
      window.location.href = '/journal';
  console.log("clicked");
});

document.getElementById('goals').addEventListener("click", function(event) {
      window.location.href = '/goals';
  console.log("clicked");
});

document.getElementById('profile').addEventListener("click", function(event) {
      window.location.href = '/profile';
  console.log("clicked");
});
</script>

</body>
</html>
